                            <tr class="headings">
                                <th class="column-title">Number </th>
                                <th class="column-title">Period</th>
                                <th class="column-title">Date</th>
                                <th class="column-title">Type </th>
                                <th class="column-title">Customer</th>
                                <th class="column-title">Status </th>
                                <th class="column-title">Gross Total </th>
                                <th class="column-title">Tax Total </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var invoice in @Model.CompanyInvoices)
                            {
                           
                                <tr class="even pointer">

                                    <td class=" "><a href="~/Invoice/Index/@invoice.id">@invoice.invoiceNo</a></td>
                                    <td class=" "><a href="~/Invoice/Index/@invoice.id">@invoice.period</a></td>
                                    <td class=" "><a href="~/Invoice/Index/@invoice.id">@invoice.invoiceDate.ToString("dd/MM/yyyy")</a></td>
                                    <td class=" "><a href="~/Invoice/Index/@invoice.id">@invoice.invoiceType</a></td>
                                    <td class=" "><a href="~/Invoice/Index/@invoice.id">@invoice.customerID</a></td>
                                    @{

                                if (@invoice.invoiceStatus.ToString()[0] == 'N')
                                {
                                    <td class="red status-invoice">@invoice.invoiceStatus</td>
                                }
                                else
                                {
                                    <td class="green status-invoice">@invoice.invoiceStatus</td>
                                }

                                    }

                                    <td class="text-right">@invoice.grossTotal.ToString("C0")</td>
                                    <td class="text-right">@invoice.taxTotal.ToString("C0")</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div> <!--xcontent-->
        </div>
    </div> <!--row-->
    <div class="row">
        <div class="x_panel">
