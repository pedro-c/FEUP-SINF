                                        <div class="col-xs-6 text-right"><label class="green"> @Model.ProfitsAndLosses[0].services.ToString("C0") </label></div>

                                    </li>
                                    <li class="company-label">
                                        <div class="col-xs-6 text-left">Others</div>
                                        <div class="col-xs-6 text-right"><label class="green"> @Model.ProfitsAndLosses[0].otherIncomes.ToString("C0") </label></div>
                                    </li>
                                </ul>
                            </li>
